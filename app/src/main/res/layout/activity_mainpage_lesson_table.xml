<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mainpage_lessonTable"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="@string/upload_explain"
        android:textColor="@color/color_hint"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
    </TextView>
    <TextView
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selector_upload_btn"
        android:layout_marginTop="24dp"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:gravity="center"
        android:text="上传文档"
        android:clickable="true"
        android:elevation="5dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:drawableStart="@drawable/drawable_icon_upload"
        android:paddingStart="16dp"
        android:focusable="true"
        android:layout_below="@id/txv">
    </TextView>
    <FrameLayout
        android:id="@+id/fl_lessontable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
    </FrameLayout>
</RelativeLayout>