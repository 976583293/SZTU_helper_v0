<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mainpage_calendar">

    <com.haibin.calendarview.CalendarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="16dp"
        android:elevation="5dp"
        app:month_view_show_mode="mode_only_current"
        app:current_month_text_color="@color/color_checked"
        app:week_text_color="@color/color_checked"
        app:current_day_text_color="@color/color_highlight"
        app:selected_text_color="@color/white"
        app:selected_theme_color="@color/color_background"
        app:month_view="com.example.sztu_helper_v0.Calendar.CalendarMonthView"
        app:week_view="com.example.sztu_helper_v0.Calendar.CalendarWeekView">
    </com.haibin.calendarview.CalendarView>

</LinearLayout>